<h1>달력보기</h1>
<br>
<%= month_calendar(events: @diaries) do |date, diaries| %>
  <div class="<%= 'mark' if date == Date.today %>" >
    <%= date.day %>
  </div>
  <% diaries.each do |diary| %>
    <div class="w-full ">
      <%= link_to "#{diary.admitted ? '✅' : '❌'} #{diary.user.name}", "/api/v1/diary/detail/#{diary.id}", class: "link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" %>
    </div>
  <% end %>
<% end %>
