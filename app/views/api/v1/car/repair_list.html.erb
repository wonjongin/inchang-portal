<h1 class="tw-text-2xl"><%= @car.number %> <%= @car.model %> 정비내역</h1>
<h2 class="tw-text-xl">전체금액: <%= number_with_delimiter(@sum_of_price, :delimiter => ',') %> 원</h2>
<div class="tw-flex tw-justify-end">
  <%= link_to("차량목록", "/api/v1/car/car_list", class: "btn btn-outline-primary btn-sm tw-mr-2") %>
  <%= link_to("정비내역 추가", "/api/v1/car/new_repair/#{@car.id}", class: "btn btn-outline-primary btn-sm") %>
</div>
<br>
<div class="overflow-x-auto">
  <table
    class="table table-bordered table-hover mt-3"
  >
    <thead class="">
    <tr>
      <% %w[정비일 주행거리 수리점 정비내용 금액 비고 수정 삭제 승인].each do |x| %>
        <th class="text-center">
          <%= x %>
        </th>
      <% end %>

    </tr>
    </thead>
    <tbody class="">
    <% if @repairs.count == 0 %>
      <tr>
        <td class="text-center" colspan="9">
          정비내역이 없습니다.
        </td>
      </tr>
    <% else %>
      <% @repairs.each do |repair| %>
        <tr>
          <td class="text-center">
            <%= repair.repaired_at %> (<%= repair.wday_name %>)
          </td>
          <td class="text-center">
            <%= number_with_delimiter(repair.odo, delimiter: ',') %>
          </td>
          <td class="text-center">
            <%= repair.center %>
          </td>
          <td class="text-center">
            <%= repair.desc %>
          </td>
          <td class="text-center">
            <%= number_with_delimiter(repair.price, delimiter: ',') %>
          </td>
          <td class="text-center">
            <%= repair.footnote %>
          </td>
          <td class="text-center">
            <%= link_to "✏️",
                        "/api/v1/car/edit_repair/#{repair.id}",
                        class: "btn btn-sm btn-outline-primary #{(repair.admitted && !@current_user.is_admin?) ? 'disabled' : ''}" %>
          </td>
          <td class="text-center">
            <%= button_to("🗑️", "/api/v1/car/delete_repair/#{repair.id}", method: :delete, class: "btn btn-sm btn-outline-danger #{(repair.admitted && !@current_user.is_admin?) ? 'disabled' : ''}", form: { data: { turbo_confirm: '정말 삭제하실건가요?' } }) %>
          </td>
          <td class="text-center">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                id="flexCheckDefault"
                data-controller="car"
                data-action="change->car#admit"
                data-car-what-to-admit-param="repair"
                data-car-id-param="<%= repair.id %>"
                <%= repair.admitted ? 'checked' : '' %>
                <%= @current_user.is_admin? ? '' : 'disabled' %>
              >
            </div>
          </td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
