<h1 class="tw-text-2xl">차량 주유내역 추가</h1>
<br>
<div data-controller="car">
  <%= form_with url: '/api/v1/car/create_repair', method: :post, class: "w-full", id: "newCarFuelForm" do |form| %>
    <div class="row g-2 mb-3 w-full">
      <%= label_in_form(form, '차번호') %>
      <%= form.text_field :number, class: "col form-control form-control-sm", value: @car.number %>
    </div>
    <div class="row g-2 mb-3 w-full">
      <%= label_in_form(form, '주유일') %>
      <%= form.date_field :refueled_at, class: "col form-control form-control-sm" %>
    </div>
    <div class="row g-2 mb-3">
      <%= label_in_form(form, '주행거리') %>
      <%= form.text_field :odo, class: "col form-control form-control-sm number-auto-comma" %>
    </div>
    <div class="row g-2 mb-3">
      <%= label_in_form(form, '주유소') %>
      <%= form.text_field :station, class: "col form-control form-control-sm" %>
    </div>
    <div class="row g-2 mb-3">
      <%= label_in_form(form, '주유금액') %>
      <%= form.text_field :price, class: "col form-control form-control-sm number-auto-comma" %>
    </div>
    <div class="row g-2 mb-3">
      <%= label_in_form(form, '주유단가') %>
      <%= form.text_field :unit_price, class: "col form-control form-control-sm number-auto-comma" %>
    </div>
    <div class="row g-2 mb-3">
      <%= label_in_form(form, '비고') %>
      <%= form.text_field :footnote, class: "col form-control form-control-sm" %>
    </div>
    <div>
    <%= form.radio_button :fuel_type, "gasoline", class: "form-check-input" %>
    <%= form.label :gasoline, "휘발유", class: "form-check-label" %>
    <%= form.radio_button :fuel_type, "diesel", class: "form-check-input" %>
    <%= form.label :diesel, "경유", class: "form-check-label"  %>
  </div>
  <% end %>
  <br>
  <br>
  <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
    <button class="btn btn-outline-primary" value="저장" id="saveBtn"
            data-controller="car"
            data-action="click->car#saveCarFuel"
            data-car-type-param="create"
            data-car-car-id-param="<%= @car.id %>"
    >저장
    </button>
    <%= render BasicButtonComponent.new(
      "btn btn-outline-primary", title: "목록", path: "/api/v1/car/fuel_list/#{@car.id}") %>
  </div>
</div>
