<div class="simple-calendar">
  <div class="calendar-heading mb-3 row">
    <%= link_to '이전', calendar.url_for_previous_view, class: "btn btn-outline-primary col-2 col-md-1" %>
    <span class="calendar-title h2 col text-center">
      <%= start_date.year %>년 <%= start_date.month %>월
    </span>
    <%= link_to '다음', calendar.url_for_next_view, class: "btn btn-outline-primary col-2 col-md-1" %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th class="text-center" style="width: 14.28%;"><%= ['일', '월', '화', '수', '목', '금', '토'][day.wday] %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: "#{calendar.td_classes_for(day)}", style: "height: 120px;" do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
