<div class="overflow-x-auto">
  <table
    class="table table-bordered table-hover mt-3"
  >
    <thead class="">
    <tr>
      <th
        class="text-center"
      >
        날짜
      </th>
      <th
        class="text-center"
      >
        작성자
      </th>
      <th
        class="text-center"
      >
        보기
      </th>
      <th
        class="text-center"
      >
        승인여부
      </th>
    </tr>
    </thead>
    <tbody class="">
    <% @diaries.each do |diary| %>
      <tr>

        <td
          class="text-center"
        >
          <%= diary.date %> (<%= diary.wday_name %>)
        </td>
        <td
          class="text-center"
        >
          <%= diary.user.name %>
        </td>
        <td class="text-center">
          <a
            href="/api/v1/diary/detail/<%= diary.id %>"
            class="btn btn-outline-primary btn-sm"
            style="--bs-btn-padding-y: .2rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .5rem;"
          >
            →
          </a>
        </td>
        <td
          class="text-center"
        >
          <%= diary.admit_status_icon %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @diaries %>
</div>
